<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <object class="GtkBox" id="main_content">
    <property name="orientation">vertical</property>
    <property name="spacing">12</property>
    <property name="margin-top">12</property>
    <property name="margin-bottom">12</property>
    <property name="margin-start">12</property>
    <property name="margin-end">12</property>

    <child>
      <object class="GtkGrid">
        <property name="row-spacing">8</property>
        <property name="column-spacing">12</property>

        <child>
          <object class="GtkBox" id="biosGroup">
            <property name="orientation">vertical</property>
            <property name="spacing">8</property>
            <layout>
              <property name="column">0</property>
              <property name="row">1</property>
              <property name="column-span">2</property>
            </layout>
            <child>
              <object class="GtkGrid">
                <property name="row-spacing">8</property>
                <property name="column-spacing">12</property>
                
              <child>
                <object class="GtkLabel">
                  <property name="label">PocketStation serial:</property>
                  <property name="xalign">0</property>
                  <layout><property name="column">0</property><property name="row">0</property></layout>
                </object>
              </child>
              <child>
                <object class="GtkEntry" id="entrySerial">
                  <property name="hexpand">True</property>
                  <property name="editable">False</property>
                  <layout><property name="column">1</property><property name="row">0</property></layout>
                </object>
              </child>

                <child>
                  <object class="GtkLabel" id="entryVersionLabel">
                    <property name="label">BIOS version:</property>
                    <property name="xalign">0</property>
                    <layout><property name="column">0</property><property name="row">1</property></layout>
                  </object>
                </child>
                <child>
                  <object class="GtkEntry" id="entryVersion">
                    <property name="hexpand">True</property>
                    <property name="editable">False</property>
                    <layout><property name="column">1</property><property name="row">1</property></layout>
                  </object>
                </child>

                <child>
                  <object class="GtkLabel" id="entryDateLabel">
                    <property name="label">BIOS date:</property>
                    <property name="xalign">0</property>
                    <layout><property name="column">0</property><property name="row">2</property></layout>
                  </object>
                </child>
                <child>
                  <object class="GtkEntry" id="entryDate">
                  <property name="editable">False</property>
                    <layout><property name="column">1</property><property name="row">2</property></layout>
                  </object>
                </child>
                
                <child>
                  <object class="GtkLabel" id="entryChecksumLabel">
                    <property name="label">BIOS checksum:</property>
                    <property name="xalign">0</property>
                    <layout><property name="column">0</property><property name="row">3</property></layout>
                  </object>
                </child>
                <child>
                  <object class="GtkEntry" id="entryChecksum">
                  <property name="editable">False</property>
                    <layout><property name="column">1</property><property name="row">3</property></layout>
                  </object>
                </child>

                <child>
                  <object class="GtkLabel" id="entryRemarkLabel">
                    <property name="label">BIOS remark:</property>
                    <property name="xalign">0</property>
                    <layout><property name="column">0</property><property name="row">4</property></layout>
                  </object>
                </child>
                <child>
                  <object class="GtkEntry" id="entryRemark">
                  <property name="editable">False</property>
                    <layout><property name="column">1</property><property name="row">4</property></layout>
                  </object>
                </child>

                </object>
            </child>
          </object>
        </child>
      </object>
    </child>

    <child>
    <object class="GtkBox">
      <property name="spacing">10</property>
      <property name="margin-top">10</property>

      <child>
        <object class="GtkButton" id="btnSave">
          <property name="label">Save BIOS</property>
          <property name="halign">start</property>
        </object>
      </child>

      <child>
        <object class="GtkBox">
          <property name="hexpand">true</property>
        </object>
      </child>

      <child>
        <object class="GtkButton" id="btnOk">
          <property name="label">Close</property>
          <property name="halign">end</property>
          <style>
            <class name="suggested-action"/>
          </style>
        </object>
      </child>

    </object>
    </child>
  </object>
</interface>